{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/utils/cJSON/*.c",
                "${workspaceFolder}/utils/algebra/*.c",
                "${workspaceFolder}/utils/custom_file/*.c",
                "${workspaceFolder}/utils/log/*.c",
                "${workspaceFolder}/*.c",
                "${workspaceFolder}/in/*.c",
                "${workspaceFolder}/in/parsers/*.c",
                "${workspaceFolder}/engine/*.c",
                "${workspaceFolder}/engine/mesh/*.c",
                "${workspaceFolder}/engine/methods/*.c",
                "${workspaceFolder}/engine/schemes/*.c",
                "${workspaceFolder}/out/*.c",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        }
    ]
}