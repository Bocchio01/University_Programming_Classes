{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/lib/*.c",
                "${workspaceFolder}/settings/*.c",
                "${workspaceFolder}/solver/schemes/*.c",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/CFD.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        }
    ]
}