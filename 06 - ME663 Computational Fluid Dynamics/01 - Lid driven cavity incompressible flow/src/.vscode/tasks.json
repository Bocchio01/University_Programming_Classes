{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/utils/cJSON/*.c",
                "${workspaceFolder}/utils/algebra/*.c",
                "${workspaceFolder}/input/*.c",
                "${workspaceFolder}/solver/*.c",
                "${workspaceFolder}/solver/mesh/*.c",
                "${workspaceFolder}/solver/methods/*.c",
                "${workspaceFolder}/solver/schemes/*.c",
                "${workspaceFolder}/output/*.c",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        }
    ]
}